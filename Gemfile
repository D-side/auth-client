source 'https://rubygems.org'

gem 'rails', '4.2.3'

# Use PG as the database for Active Record
gem 'pg'

# Assets
gem 'slim'

gem 'sass-rails'
gem 'bootstrap-sass'

gem 'uglifier'
gem 'coffee-rails'

# Use jquery as the JavaScript library
gem 'jquery-rails'

# Production-OK server
gem 'puma'

# Authentication
gem 'devise'
gem 'omniauth-oauth2'

# Separation of sensitive data into environment
gem 'figaro'

group :development, :test do
  # An augmentation for error pages
  gem 'better_errors'
  gem 'binding_of_caller'

  # For the better debug REPL
  gem 'pry-rails'
  gem 'pry-doc'
  gem 'pry-byebug'
  gem 'awesome_print'

  # Access an IRB console on exception pages or by using <%= console %> in views
  gem 'web-console', '~> 2.0'
end
